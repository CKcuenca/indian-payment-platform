# 测试环境配置
NODE_ENV=test
PORT=3002

# V8内存优化参数
NODE_OPTIONS="--max-old-space-size=1024 --initial-heap-size=512 --max-semi-space-size=64 --gc-interval=100 --max-code-cache-size=128 --string-slice-copy-cache-size=64 --max-external-memory-size=256 --max-array-buffer-size=128"

# 数据库配置 - 测试环境使用独立数据库
MONGODB_URI=mongodb://localhost:27017/payment-platform-test

# 安全配置
JWT_SECRET=cashgit-jwt-secret-2024-test-secure
API_KEY_HEADER=X-API-Key

# 监控配置
ENABLE_MONITORING=true
MEMORY_THRESHOLD=85

# 测试环境特殊配置
DEBUG=true
LOG_LEVEL=debug